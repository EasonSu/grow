#!/usr/bin/env php
<?php

use WooCommerce\Ventures\WR\Commands\Bulk;
use WooCommerce\Ventures\WR\Commands\VersionReplace;
use WR\Application;

$rootDir = dirname(__DIR__);

// Verify that `composer install` has been run.
if (!file_exists("{$rootDir}/vendor/autoload.php")) {
	echo "Please run \`composer install\`!\n";
	die(1);
}

// Load the Woorelease config.
require_once "{$rootDir}/vendor/woocommerce/woorelease/config.php";

// Load the autoloader.
require_once "{$rootDir}/vendor/autoload.php";

// todo: Determine the Woorelease version.
$version = '2.4.0';

// Set up application and add our own commands.
$app = new Application(WOORELEASE_PRODUCT_NAME, $version);

print(
	"\033[38;5;99m
                                                          _                            _
 __      __                    _                        / /    ___                     \ \
 \ \    / /___  ___  _ _  ___ | | ___  __ _  ___ ___   | |    / __| _ _  ___  _ __ __   | |
  \ \/\/ // _ \/ _ \| '_|/ -_)| |/ -_)/ _` |(_-</ -_)  | |   | (_ || '_|/ _ \ \ V  V /  | |
   \_/\_/ \___/\___/|_|  \___||_|\___|\__,_|/__/\___|   \_\   \___||_|  \___/  \_/\_/  /_/
	\033[0m\n\n"
);

$app->addCommands(
	[
		new Bulk(),
		new VersionReplace(),
	]
);

$app->run();
